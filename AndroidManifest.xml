<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.fotocloud"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock" >
        <activity
            android:name="com.app.fotocloud.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.app.fotocloud.facebook.SplashFragment"
            android:label="@string/title_activity_splash_fragment" >
        </activity>
        <activity
            android:name="com.app.fotocloud.facebook.SelectionFragment"
            android:label="@string/title_activity_selection_fragment" >
        </activity>
        <activity
            android:name="com.app.fotocloud.FragmentTest"
            android:label="@string/title_activity_fragment_test" >
        </activity>
        <activity
            android:name="com.app.fotocloud.facebook.PhotoGridViewerFragment"
            android:label="@string/title_activity_photo_grid_viewer_fragment" >
        </activity>
    </application>

</manifest>